<?xml version="1.0" encoding="UTF-8" ?>
<settings
        xsi:schemaLocation='http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd'
        xmlns='http://maven.apache.org/SETTINGS/1.0.0'
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'>

    <servers>
        <server>
            <id>maven.hevodata.me</id>
            <username>circleci</username>
            <password>ci-password</password>
            <configuration>
                <auth-url>ci-auth-token</auth-url>
            </configuration>
        </server>
        <server>
            <id>snapshot.maven.hevodata.me</id>
            <username>circleci</username>
            <password>ci-password</password>
            <configuration>
                <auth-url>ci-auth-token</auth-url>
            </configuration>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>hevo-artifactory</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
                <repository>
                    <id>maven.hevodata.me</id>
                    <url>s3://hevo-artifacts/package/mvn/release</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </releases>
                </repository>
                <repository>
                    <id>snapshot.maven.hevodata.me</id>
                    <url>s3://hevo-artifacts/package/mvn/snapshot</url>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>
</settings>